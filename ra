reader acquire
{
lock_acquire(reader_lock);
reader_waiting++;
lock_release(reader_lock);

lock_acquire(writer_lock);
if(writers_waiting>0) {
	cv_wait(writer_cv, writer_lock)
}
lock_release(writer_lock);

lock_acquire(reader_lock);
reader_count++;
if(reader_count == 1)
	resource.P();
reader_waiting--;
lock_release(reader_lock);

}
